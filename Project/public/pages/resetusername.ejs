<div class="row">
    <div class="col-md-12">
        <form action="/resetusername/<%= token %>" method="POST">
            <legend>Reset Username</legend>
            <div class="form-group">
                <label for="username">New Username</label>
                <input type="text" name="username" value="" placeholder="New username" autofocus="autofocus" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="confirm">Confirm Username</label>
                <input type="text" name="confirm" value="" placeholder="Confirm username" class="form-control"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update username</button>
            </div>
        </form>
    </div>
</div>